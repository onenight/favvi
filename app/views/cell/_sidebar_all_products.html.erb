
<table class="table table-bordered">
  <thead>
  <th class="well" style="width 200px">Apparels</th>
  </thead>
  <tdoby>
  <% @apparels.find_each do |apparel| %>
    <tr>
    <td><%= link_to apparel.name, product_path(apparel) %></td>
    </tr>
  <% end %>
  </tdoby>
</table>
<table class="table table-bordered">
  <thead>
  <th class="well" style="width 200px">Accessories</th>
  </thead>
