<%= simple_form_for @angel, :html => { :multipart => :true} do |f| %>

<%= f.input :name, :input_html => { :class => "span6"},
 			:placeholder => "Enter Your Brand Name Here!"%>
<%= f.input :user_email, :input_html => { :class => "span6"},
 			:placeholder => "Enter Your Brand Name Here!"%>
<%= f.input :description, :input_html => { :class => "span6"},
			:placeholder => "Enter Your Brand Description Here!"%>
<%= f.input :avatar, :input_html => { :class => "span6"},
 			:label => "Upload_avatar_image" %>
<%= f.input :banner, :input_html => { :class => "span6"},
 			:label => "Upload_banner_image" %>

<%= f.button :submit, :class => "btn btn-primary"%>
<% end %>
